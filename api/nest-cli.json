{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.env",
        "outDir": "dist/src"
      },
      {
        "include": "**/*.conf",
        "outDir": "dist/src"
      },
      {
        "include": "seed/*.json",
        "outDir": "dist/src/seed"
      },
      {
        "include": "**/*.html",
        "outDir": "dist/src"
      },
      {
        "include": "**/*.css",
        "outDir": "dist/src"
      },
      {
        "include": "pdf/*",
        "outDir": "dist/src/pdf"
      }
    ]
  }
}
